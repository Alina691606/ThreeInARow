<Window x:Class="ThreeInARow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThreeInARow"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="620" ResizeMode="NoResize">
    <Grid x:Name="RootGrid">
        <Label x:Name="label" Content="Очки:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="35" Width="65" FontSize="20"/>
        <Label x:Name="labelPoints"  HorizontalAlignment="Left" VerticalAlignment="Top" Height="35" Width="100" FontSize="20" Margin="65,0,0,0"/>
        <Label x:Name="labelTimer"  HorizontalAlignment="Left" VerticalAlignment="Top" Height="35" Width="174" FontSize="20" Margin="440,0,0,0"/>
        <Button x:Name="buttonStart" Content="Играть" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Margin="160,300,0,0" Height="124" FontSize="72" Click="ButtonStart_Click"/>
    </Grid>
</Window>
